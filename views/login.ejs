<%- include("partials/header.ejs") %>

  <div class="vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="w-30 h-auto d-flex flex-column align-items-center justify-content-start bg-white px-3 rounded">
      <p class="w-100 text-dark text-center py-3 fw-bold fs-3 mb-0">Authentication</p>
      <form class="w-100" action="/login" method="post" id="loginForm">
        <div class="w-100 pb-3 d-flex align-items-center justify-content-center">
          <input type="text" 
            name="email" 
            placeholder="Email Address" 
            class="form-control w-75"
          />
        </div>
        <div class="w-100 pb-3 d-flex align-items-center justify-content-center">
          <input type="password" 
            name="password" 
            placeholder="Password" 
            class="form-control w-75"
          />
        </div>
        <div class="w-100 d-flex align-items-center justify-content-center pb-2">
          <button class="btn btn-dark w-75 text-white fw-bold" type="submit" value="submit"> 
            Continue
          </button>
        </div>
      </form>
      <div class="w-75 d-flex gap-2 pt-2 justify-content-start">
        <input class="form-check-input" type="checkbox" name="checkboxup" id="remember"/>
        <p class="text-primary small mb-0 ">
         Remember me
        </p>
      </div>
      <div class="w-75 d-flex justify-content-start align-items-center mb-1">
        <p class="text-center text-black-50 fs-6 mb-0 me-2">
          Create an Account? <span><a class="text-danger" href="/signup">Click Here</a></span>
        </p>
      </div>
      <div class="d-flex gap-2 pt-2">
        <input class="form-check-input" type="checkbox" name="checkboxup" id="agree"/>
        <p class="text-muted small mb-0">
         By continuing, I agree to the term of use and privacy policy.
        </p>
        <p class="text-danger small">
          <%= typeof message !== 'undefined' ? message : '' %>
        </p>
      </div>
      <div class="d-flex justify-content-center align-items-center w-100">
        <hr class="mx-2 my-3" style="width: 50%; border-top: 2px solid #000000;">
        <p class="text-dark medium mb-0">or</p>
        <hr class="mx-2 my-3" style="width: 50%; border-top: 2px solid #000000;">
      </div>
      <div class="w-100 d-flex align-items-center justify-content-center pb-3">
        <a class="btn btn-dark w-75 text-white fw-semibold d-flex align-items-center justify-content-center" href="/auth/google">
          <img class="me-3" src="/img/google.png" alt="google-logo">Sign in with Google
        </a>
      </div>
      <div class="w-100 d-flex align-items-center justify-content-center pb-3">
        <a class="btn btn-dark w-75 text-white fw-semibold d-flex align-items-center justify-content-center" href="/auth/facebook">
          <img class="me-3" src="/img/facebook.png" alt="facebook-logo">Sign in with Facebook
        </a>
      </div>
      <div class="w-100 d-flex align-items-center justify-content-center pb-5">
        <a class="btn btn-dark w-75 text-white fw-semibold d-flex align-items-center justify-content-center" href="/auth/github">
          <img class="me-3" src="/img/github.png" alt="github-logo">Sign in with Github
        </a>
      </div>
    </div>
  </div>

<%- include("partials/footer.ejs") %>